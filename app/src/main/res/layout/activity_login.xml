<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log"
    android:outlineAmbientShadowColor="#D67171"
    tools:context=".login">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="279dp"
        android:layout_height="64dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="62dp"
        android:fontFamily="@font/calligraffitti"
        android:shadowColor="#BF1616"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#957DAD"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameforlogin"
        android:layout_width="222dp"
        android:layout_height="55dp"
        android:layout_marginTop="223dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:textColorHint="#957DAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#957DAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameforlogin" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_marginTop="118dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/calligraffitti"
        android:onClick="log"
        android:text="LOGIN now"
        android:textColor="#957DAD"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass1" />

    <Button
        android:id="@+id/pp"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="65dp"
        android:background="#0003DAC5"
        android:fontFamily="@font/arizonia"
        android:onClick="swi"
        android:text="SIGNUP"
        android:textColor="#957DAD"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>